<div>
  <h1>Let's place your battleships, <%= session[:name2] %>!</h1>
  <pre><%= $game.own_board_view($game.player_2) %></pre>
  <form method="post">
    <input type="text", name="coordinate">
    <select name='ship'>
      <option value="submarine">Submarine</option>
      <option value="destroyer">Destroyer</option>
      <option value="cruiser">Cruiser</option>
      <option value="battleship">Battleship</option>
      <option value="aircraft_carrier">Aircraft carrier</option>
    </select>
    <label for='vertically'>Vertically
    <input type="radio" name="direction" value='vertically'>
    </label>
    <label for='horizontally'>Horizontally
    <input type="radio" name="direction" value='horizontally'>
    </label>
    <br>
    <input type="submit" value="Place Ship">
  </form>
  <form action="/multi_gameplay", method="get">
    <input type="submit" value="Start Game">
  </form>
</div>
